      xmlns:vm="clr-namespace:BoenaVista.Viewmodel"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Intervention">

    <Page.DataContext>
        <vm:InterventionViewmodel />
    </Page.DataContext>

